<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.themovieapps.fragment.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite" >
        <action app:destination="@id/movieFragment" />
        <action app:destination="@id/serialFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.themovieapps.fragment.MovieFragment"
        android:label="@string/title_1"
        tools:layout="@layout/fragment_movie" >
        <action app:destination="@id/detailMovieActivity" />
    </fragment>

    <fragment
        android:id="@+id/serialFragment"
        android:name="com.example.themovieapps.fragment.SerialFragment"
        android:label="@string/title_2"
        tools:layout="@layout/fragment_serial" >
        <action app:destination="@id/detailSerialActivity" />
    </fragment>

    <activity
        android:id="@+id/detailMovieActivity"
        android:name="com.example.themovieapps.activity.DetailMovieActivity"
        android:label="DetailMovieActivity" />

    <activity
        android:id="@+id/detailSerialActivity"
        android:name="com.example.themovieapps.activity.DetailSerialActivity"
        android:label="DetailSerialActivity" />
</navigation>